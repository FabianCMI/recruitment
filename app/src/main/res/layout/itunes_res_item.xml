<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/api_item_imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            app:imageUrl="@{apiRes.artworkUrl100}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/api_item_textView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:padding="2dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintStart_toEndOf="@+id/api_item_imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:trackName="@{apiRes.trackName}"
            tools:text="A" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>
        <variable
            name="apiRes"
            type="com.example.maniaksearch.network.ApiResults" />
    </data>
</layout>